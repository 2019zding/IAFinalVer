<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @highschoolposts.each do |highschoolpost| %>
      <tr>
        <td><%= highschoolpost.title %></td>
        <td><%= highschoolpost.body %></td>
        <td><%= link_to 'Show', highschoolpost %></td>
        <% if current_user %>
        <td><%= link_to 'Edit', edit_highschoolpost_path(highschoolpost) %></td>
        <td><%= link_to 'Destroy', highschoolpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_highschoolpost_path %>
<%= link_to 'Back', highSchool_path %>
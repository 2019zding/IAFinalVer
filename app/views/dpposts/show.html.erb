<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @dppost.title %>
</p>

<% (0...@dppost.images.count).each do |image| %>
<div style="width:300px, height:300px;">
	<%= image_tag(@dppost.images[image], style:'width:20%; height:auto') %>
</div>
<% end %>

<%= link_to 'Download', @dppost.file %>
<p>
  <strong>Body:</strong>
  <%= @dppost.body %>
</p>

<%= link_to 'Edit', edit_dppost_path(@dppost) %> |
